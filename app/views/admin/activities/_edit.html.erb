<% form_for(@activity, :url => { :action => action, :id => target }) do |f| %>
  <table>
    <tr>
      <th><%= f.label(:id, "ID") %></th>
      <td><%= f.text_field(:id) %></td>
    </tr>
    <tr>
      <th><%= f.label(:member_id, "メンバー名") %></th>
      <td><%= f.collection_select(:member_id, Member.find(:all), :id, :name) %></td>
    </tr>
    <tr>
      <th><%= f.label(:name, "活動内容") %></th>
      <td><%= f.text_field(:name) %></td>
    </tr>
    <tr>
      <th><%= f.label(:detail, "活動詳細") %></th>
      <td><%= f.text_area(:detail, :size => "25x10") %></td>
    </tr>
  </table>
  <%= submit_tag("登録") %>
<% end %>
